<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quartzodev.fragments.DetailActivityFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <com.quartzodev.views.DynamicImageView
                android:id="@+id/detail_imageview_thumb"
                android:layout_width="139dp"
                android:layout_height="209dp"
                android:scaleType="centerCrop"
                android:transitionName="@string/transition_image"
                tools:src="@drawable/common_google_signin_btn_icon_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_textview_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    tools:text="Book Title"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

                <TextView
                    android:id="@+id/detail_textview_author"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:text="Lenivitz Papu"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/detail_textview_published_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="23 June 2016" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/card_actions">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/detail_imageView_bookmark"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/ic_folder_black_24dp"
                    android:contentDescription="@string/move_to_folder_cd"
                    />

                <ImageView
                    android:id="@+id/detail_imageView_lend_book"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/ic_card_giftcard_black_24dp"
                    android:contentDescription="@string/lent_book_cd"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_book_borrowed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/warn">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/borrowed_book"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    tools:text="@string/borrowed_book" />

                <TextView
                    android:id="@+id/detail_textview_receiver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    tools:text="Receiver name: Victor"

                    />

                <TextView
                    android:id="@+id/detail_textview_receiver_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    tools:text="Receiver email: vhaldir@gmail.com" />

                <TextView
                    android:id="@+id/detail_textview_receiver_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    tools:text="9 days ago" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:id="@+id/card_book_description">

            <TextView
                android:id="@+id/detail_textview_description"
                style="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:lineSpacingMultiplier="@fraction/detail_body_line_spacing_multiplier"
                tools:text="@string/lorem_ipsum_large" />


        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>
